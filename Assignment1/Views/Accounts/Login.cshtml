
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<hr />
<div>
    <div class="alert alert-info text-center">
        <p>Don't have an account? <strong>@Html.ActionLink("Register", "Register", "Users")</strong></p>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <form class="form-horizontal" method="post" action="/Accounts/Login">
                <div class="form-group input-group col-md-12">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input type="text" class="form-control" id="txtUsername" name="username" placeholder="Username" autofocus />
                </div>
                <div class="form-group input-group col-md-12">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input class="form-control" type="password" id="txtPassword" name="password" placeholder="Password" />
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="input-group col-sm-4 col-sm-offset-4">
                            <button type="submit" class="btn btn-default" id="login" name="login">Log In</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>